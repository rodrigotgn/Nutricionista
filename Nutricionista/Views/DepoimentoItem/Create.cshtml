@model Nutricionista.Models.DepoimentoItem

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}
<h2>Create</h2>

@using (Html.BeginForm("Create", "DepoimentoItem", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
        <h4>DepoimentoItem</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">

            <div class="form-group col-sm-6 col-md-6">
                @Html.LabelFor(model => model.DesNome)
                @Html.EditorFor(model => model.DesNome, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DesNome, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-sm-6 col-md-6">
                @Html.LabelFor(model => model.DesIdade)
                @Html.EditorFor(model => model.DesIdade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DesIdade, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="row">

            <div class="form-group col-sm-12 col-md-12">
                @Html.LabelFor(model => model.DesDescricao)
                @Html.TextAreaFor(model => model.DesDescricao, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DesDescricao, "", new { @class = "text-danger" })
            </div>

            <div class="form-group col-sm-12 col-md-12">
                @Html.LabelFor(model => model.file)    

                @Html.TextBoxFor(m => m.file, new { @class = "form-control", type = "file" })
                @Html.ValidationMessageFor(model => model.file, "", new { @class = "text-danger" })

            </div>

            <br />

            <div class="col-sm-12 col-md-12">

                <input type="submit" value="Salvar" class="btn btn-primary" />

                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
}


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Scripts/DepoimentoItem.js"></script>
